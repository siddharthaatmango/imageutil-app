<% content_for :page_title do %>
  Support
<% end %>

<div class="row mb-2">
  <div class="col-md-12">

    <div class="media">
      <div class="media-body">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= image_tag "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.email)}", class: "mr-3 support_image" %> New support request</h5>
        </div>
        <div class="card-body">
          <%= form_with(model: @message, local: true) do |form| %>
            <div class="form-group">
              <%= form.text_field :subject, class: "form-control", placeholder: "Subject" %>
            </div>
            <div class="form-group">
              <%= form.text_area :body, class: "form-control", placeholder: "Detail" %>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          <% end %>
        </div>
      </div>
    </div>


  </div>
</div>