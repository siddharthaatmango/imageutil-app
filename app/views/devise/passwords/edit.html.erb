<div class="col-lg-5">
  <div class="card card-login mx-auto mt-5">
    <div class="card-header">Change your Password</div>
    <div class="card-body">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= bootstrap_devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
              </div>
              <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: false, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
              </div>
              <%= f.password_field :password, placeholder: "Password", autocomplete: false, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group input-group-alternative">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
              </div>
              <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: false, class: 'form-control' %>
            </div>
          </div>          

          <p><br /></p>
          <div class="form-group">
            <%= f.submit  'Change your Password', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
